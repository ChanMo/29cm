<scroll-view>
  <navigator wx:for="{{data}}" wx:key="{{index}}" url="/pages/article/article?id={{item.id}}">
    <image src="{{item.cover}}" mode="aspectFit"
      style="width:100%;height:64vw" />
    <view style="padding:20px;box-sizing:border-box;">
      <view style="margin-bottom:5px;">{{item.title}}</view>
      <view style="font-size:14px;color:grey;">{{item.created}}</view>
    </view>
  </navigator>
</scroll-view>
