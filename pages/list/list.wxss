/* pages/list/list.wxss */
.empty {
  padding: 35px;
  box-sizing: border-box;
  text-align: center;
  color: lightgrey;
  font-weight: bold;
}
.menu {
  position:fixed;
  bottom:30px;
  left:15px;
  width:50px;
  height:50px;
  padding:15px;
  text-align:center;
  background:black;
  border-radius:25px;
  box-sizing:border-box;
  box-shadow:2px 4px 4px lightgrey;
}
.sortBox {
  position:fixed;
  bottom:0;
  left:0;
  width:100%;
  background:black;
  color:white;
  box-shadow:0 -3px 3px lightgrey;
}
.sortBox__close {
  text-align:center;
  padding:10px 0;
  box-sizing:border-box;
}
.sortBox__container {
  padding:5px 15px 15px 0;
  box-sizing:border-box;
  display:flex;
  align-items:center;
  justify-content:space-around;
  font-size:12px;
}
.sortBox__container view {
  border: 1px solid transparent;
  border-radius:50%;
  width:50px;
  height:50px;
  line-height:50px;
  text-align:center;
}
.active {
  border-color:white !important;
}
