<!--index.wxml-->
<scroll-view>

  <!-- banner -->
  <swiper autoplay="true" 
    indicator-dots="true"
    indicator-color="rgba(255,255,255,0.4)"
    style="height:450px;margin-bottom:20px;">
    <block wx:for="{{banner}}" wx:key="{{index}}">
      <swiper-item>
        <navigator url="{{item.link}}">
          <image src="{{item.image}}" style="width:100%;height:450px;" />
          <view style="position:absolute;bottom:20%;left:50%;transform:translate(-50%, 0);">
            <view style="font-size:40px;color:white;">{{item.title}}</view>
            <view style="text-align:center;font-size:24px;color:rgba(255,255,255,0.8)">{{item.subtitle}}</view>
          </view>
        </navigator>
      </swiper-item>
    </block>
  </swiper>

  <!-- today commodity -->
  <navigator style="padding-left:50px;box-sizing:border-box;margin-bottom:40px;position:relative;" url="/pages/commodity/commodity">
    <view style="position:absolute;left:0;top:120px;width:40px;height:4px;background:black;z-index:99"></view>
    <image src="{{commodity[0].image}}" style="width:300px;height:300px" />
    <view style="font-size:30px;">{{commodity[0].name}}</view>
    <view style="font-size:16px;">{{commodity[0].desc}}</view>
    <view style="border-top:1px solid lightgrey;display:flex;margin-top:10px;padding-top:10px;">
      <image src="{{commodity[0].image}}" style="width:64px;height:64px;" />
      <view style="padding-left:10px;">
        <view style="font-size:14px;color:black;">sony x5000</view>
        <view style="font-size:14px;color:grey;">35-55mm, 1.8</view>
        <view style="font-size:14px;color:red">4500.00</view>
      </view>
    </view>
  </navigator>

  <!-- 优惠商品 -->
  <view style="padding-left:50px;box-sizing:border-box;position:relative;">
    <view style="position:absolute;left:0;top:80px;width:40px;height:4px;background:black;z-index:99"></view>
    <view style="font-size:24px;color:black;">今日优惠70%</view>
    <scroll-view scroll-x>
    <view style="display:flex;flex-grow:nogrow">
      <navigator wx:for="{{discount}}" 
        url="/pages/commodity/commodity?id={{item.id}}"
        wx:key="{{index}}" 
        style="width:200px;margin-right:15px;">
        <image src="{{item.cover}}" style="width:200px;height:200px;" />
        <view style="font-size:14px;">{{item.name}}</view>
        <view style="font-size:14px;color:red;">{{item.price}}</view>
      </navigator>
    </view>
  </scroll-view>
  </view>

  <view style="padding-left:50px;box-sizing:border-box;margin-bottom:40px" >
    <view style="font-size:24px;color:black;">分类</view>
    <navigator wx:for="{{category}}" wx:key="{{index}}"
      url="/pages/list/list?category={{item.id}}"
      style="display:inline-block;margin:0 5px 5px 0;line-height:10px;font-size:14px;">{{item.name}}</navigator>
  </view>

</scroll-view>
